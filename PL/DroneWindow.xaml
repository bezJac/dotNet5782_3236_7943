<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Drone" Height="480" Width="800">
    <!--Icon="C:\Users\PC\source\repos\bezJac\dotNet5782_3236_7943\PL\icons8_drone_60_yNM_icon.ico"-->

    <Grid>
        <Grid x:Name="actionDrone"  Background="#FFD5DCD0"  Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="140*"/>
                <RowDefinition Height="140*"/>
                <RowDefinition Height="140*"/>
                <RowDefinition Height="30*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Close" Background="#FF669966" BorderThickness="1" BorderBrush="Black"  Grid.Column="1" 
                    HorizontalAlignment="Center" Margin="5,0,5,0" Grid.Row="3" VerticalAlignment="Center" Width="50"
                   FontSize="16" FontFamily="Comic Sans MS"  Click="CloseWindowButton_Click"/>

            <Viewbox Grid.Column="1" Grid.RowSpan="3">


                <TextBlock  Background="White"  Padding="20,10,10,10"  x:Name="droneView"  
                            TextAlignment="Left" FontWeight="Bold" FontStretch="Normal"  FontFamily="Ariel"
                            FontSize="14" FontStyle="Italic" Grid.Column="1"  TextWrapping="Wrap" 
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Height="{Binding RelativeSource={RelativeSource FindAncestor, 
                         AncestorType={x:Type Window}}, Path=Height}"
                      MinWidth="100"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

            </Viewbox>

            <Label   Content="Enter New Model:" FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="12"
                     HorizontalContentAlignment="Center" Grid.Column="2"  Margin="28,10,28,109"  Width="145" Height="25" />
            <TextBox x:Name="newModel"  SpellCheck.IsEnabled="True" Height="20" Width="120" Grid.Column="2" Margin="40,40,40,84"/>
            <Button Content="Update" Background="#FF669966" BorderThickness="1" BorderBrush="Black" 
                    FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20" Grid.Column="2"
                   Height="45" Width="120" Click="UpdateButton_Click" ToolTip="update the drone's model"   Margin="35,65,34,25"/>


            <Button  Content="Charge" Background="#FF669966" BorderThickness="1" BorderBrush="Black"  Grid.Column="2" Grid.Row="1" 
                    FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20"
                    Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" 
                    ToolTip="send a drone to nearest station to charge" Click="ChargeButton_Click"/>
            <Button  Content="Discharge" Background="#FF669966" BorderThickness="1" BorderBrush="Black" 
                    Grid.Column="2" Grid.Row="2" Height="50" 
                    FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" 
                     Click="DischargeButton_Click" ToolTip="release drone from charge"/>
            <Button Content="Schedule"  Background="#FF669966" BorderThickness="1" BorderBrush="Black" 
                    Grid.Column="0" Grid.Row="0" Height="50" 
                    FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" 
                    Click="ScheduleButton_Click" ToolTip="link a drone to a parcel"/>
            <Button Content="Pick Up"  Background="#FF669966" BorderThickness="1" BorderBrush="Black"
                    Grid.Column="0" Grid.Row="1" Height="50" 
                    FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" 
                    Click="PickUpButton_Click" ToolTip="Pick Up Linked parcel"/>
            <Button Content="Deliver" Background="#FF669966" BorderThickness="1" BorderBrush="Black" 
                    Grid.Column="0" Grid.Row="2" Height="50" 
                    FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" 
                    Click="DeliverButton_Click" />
        </Grid>
        <Grid x:Name="addDrone" Visibility="Collapsed" Background="#FFD5DCD0" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label  Content="Enter Drone's ID:" VerticalAlignment="Center" Grid.Row="1"  FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold"
                    HorizontalAlignment="Right" Grid.Column="0" Visibility="Visible"/>
            <TextBox x:Name="idTextBox" Width="140" VerticalAlignment="Center" 
                        Text="{Binding Id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=True }"
                        Grid.Row="1" Height="23" HorizontalAlignment="Center"  Grid.Column="1" MaxLength="4"/>
            <Label Content="Enter Drone's Model:" VerticalAlignment="Center" Grid.Row="2"  HorizontalAlignment="Right" Grid.Column="0"
                    FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold"/>
            <TextBox x:Name="modelTextBox" Width="140" VerticalAlignment="Center"
                        Text="{Binding Model, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                        Grid.Row="2" Margin="3" Height="23" HorizontalAlignment="Center" Grid.Column="1"/>
            <Label  Content="Choose Max Weight:" VerticalAlignment="Center" Grid.Row="3"  HorizontalAlignment="Right"
                    FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold" Grid.Column="0" />
            <ComboBox x:Name="maxWeightComboBox" Width="140" VerticalAlignment="Center" Grid.Row="3"  Height="Auto" HorizontalAlignment="Center"
                        SelectedItem="{Binding MaxWeight}" Grid.Column="1">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>

            <Label Content="Choose charging station:" FontSize="15" FontFamily="Comic Sans MS" FontWeight="Bold" Grid.Row="4"
                    VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <ComboBox x:Name="stationsList" Width="140"  Grid.Column="1" Grid.Row="4" Height="23"/>
            <Button Content="Add" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center"  VerticalAlignment="Center"
                    Grid.RowSpan="2"  Background="#FF669966" BorderThickness="1" BorderBrush="Black"
                    FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20" Width="120" Height="50" Click="AddButton_Click"/>
            <Button Content="Cancel" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center"  VerticalAlignment="Center"
                        Grid.RowSpan="2"  Background="#FF669966" BorderThickness="1" BorderBrush="Black"
                    FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="20" Width="120" Height="50"
                    Click="CancelButton_Click" RenderTransformOrigin="4.601,0.623" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</Window>
