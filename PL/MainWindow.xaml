<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="" Height="480" Width="800" Icon= "\images\Icon_drone.ico"  >
   
    <Grid Background="#FFD5DCD0" >


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="customer">
    
           
                <Label Content="Enter ID: " HorizontalAlignment="Center" FontWeight="Bold" FontSize="15" Margin="0,60,0,0" />
                <TextBox x:Name="IdCustomerTxt" Height="20" Width="120" Text="{Binding Id, Mode=TwoWay}" MaxLength="8"/>
           
            <Button x:Name="SignIn" Content="Sign in" Click="signInButton_Click" Visibility="Visible" Margin="15"/>
            <Label Content="New customer?" HorizontalAlignment="Center" Margin="0,45,0,0" FontWeight="Bold" FontSize="20"/>
            <Button x:Name="Register" Content="Register" Style="{StaticResource ButtonStyle}" Visibility="Visible"
                    Margin="0,10,0,0" Click="registerButton_Click"/>
        </StackPanel>





        <StackPanel Grid.Column="1">
            <Label Content="Manager Access" HorizontalAlignment="Center" FontWeight="Bold" FontSize="30" Margin="0,120,0,0" />
            <Button Content="Enter"  Style="{StaticResource ButtonStyle}" Visibility="Visible" Grid.Column="1" Background="#FF669966" 
                MinHeight="50" MaxHeight="100" MinWidth="150" MaxWidth="200" Click="managerWindowButton_Click" 
                FontFamily="Comic Sans MS" HorizontalContentAlignment="center" Margin="0,20,0,0"
                 FontSize="30" FontWeight="Bold" FontStretch="Normal" BorderBrush="Black" Width="226"/>
        </StackPanel>

    </Grid>
</Window>
