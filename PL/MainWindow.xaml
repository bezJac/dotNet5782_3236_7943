<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"

    Title="Start" Height="480" Width="800"  Icon= "\images\Icon_drone.ico" Closing="exitProgram"  Style="{StaticResource WindowStyle}"  >
    <Window.Resources>
        <local:TextToEnableConverter x:Key="TextToEnableConverter"/>
    </Window.Resources>

    <Grid>
        <Border  >
            <Border.Background>
                <ImageBrush Stretch="Fill" ImageSource="\images\startUpPic1.jpg"   />
            </Border.Background>

        </Border>
        <Grid x:Name="MainGrid" Background="Transparent" >

            <Button x:Name="Customer" Content="Customer" Style="{StaticResource ButtonStyle}" Visibility="Visible"  
                MouseEnter="Button_MouseEnter"     Margin="652,289,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />

            <Button x:Name="Register" Content="Register" Style="{StaticResource ButtonStyle}" Visibility="Visible"
                    Margin="652,365,0,0" Click="registerButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top"
                    FontSize="20" Width="124" Height="45"  MouseEnter="Button_MouseEnter"/>


            <Button x:Name="Manager" Content="Manager"  Style="{StaticResource ButtonStyle}" Visibility="Visible"  
                
                 Margin="651,0,0,0" MouseEnter="Button_MouseEnter"
                 FontSize="20"  FontStretch="Normal"  Width="125" HorizontalAlignment="Left" Height="45" />


        </Grid>
    </Grid>
</Window>